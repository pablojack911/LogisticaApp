<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.dynamicsoftware.pocho.logistica.Vista.EstadoMercaderia.EstadoMercaderiaActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relay_a_cobrar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="8dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="504dp">

        <TextView
            android:id="@+id/a_cobrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/total_a_rendir"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textColor="@color/efectivo"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/efectivo_a_rendir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="$ 5445.53"
            android:textAlignment="viewEnd"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText"/>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tvMercaderiaEnCamion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_weight="5"
        android:text="@string/mercaderia_en_cami_n"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textColor="@color/error"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <ListView
        android:id="@+id/lv_articulos_en_camion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="85"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>
</LinearLayout>
